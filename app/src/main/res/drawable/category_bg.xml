<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Selected State -->
        <item android:state_checked="true">
                <shape android:shape="rectangle">
                        <solid android:color="#FF4081" /> <!-- Red color for selected state -->
                        <corners android:radius="20dp" /> <!-- Rounded corners -->
                </shape>
        </item>

        <!-- Default State -->
        <item>
                <shape android:shape="rectangle">
                        <solid android:color="#E0E0E0" /> <!-- Light gray for unselected state -->
                        <corners android:radius="20dp" /> <!-- Rounded corners -->
                </shape>
        </item>
</selector>